<h1>islands you have visited</h1>

<h2>
	<%= @user.name %>
	<%= link_to('DELETE', user_path(@user.id), method: :delete)  %>
</h2>

<ul>
	<% @user.islands.each do |island| %>
		<li>
			<!-- link to user_island show page -->
			<%= link_to island[:name], user_island_path(@user, island) %>
		</li>
	<% end %>
</ul>

<h2>Islands you haven't visited</h2>
<ul>
	<% (Island.all.map(&:name) - @user.islands.map(&:name)).each do |island| %>
		<!-- link to island show page -->
		<li><%= link_to island, island_path(island) %></li>
	<% end %>
</ul>
